@using WheelAuction.WebUI.Client.Components.Account.Shared
@using WheelAuction.WebUI.Server.Components.Layout

<Router AppAssembly="WheelAuction.WebUI.Server.Shared.AssemblyReference.Assembly"
		AdditionalAssemblies="[WheelAuction.WebUI.Client.Shared.AssemblyReference.Assembly]">
	<Found Context="routeData">
		<AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
			<NotAuthorized>
				<RedirectToLogin />
			</NotAuthorized>
		</AuthorizeRouteView>
		<FocusOnNavigate RouteData="routeData" Selector="h2" />
	</Found>
</Router>